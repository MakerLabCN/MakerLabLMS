= render 'guides/show/bookmarked_users'
= render 'guides/show/manage'

- content_for :template_js do
  :plain
    var creating_comment = false;

    $("textarea#comment_content").keydown(function(e) {
      if (e.ctrlKey && e.keyCode == 13) {
        if (creating_comment) return;
        creating_comment = true
        $("input[type=submit]").click();
      }
    });

- guide_user = @guide.cached_assoc_object(:user)

.box
  %article
    .header
      .pull-right
        = user_profile_avatar_link(guide_user, :large)
      = build_navigation([link_to("学习系统", guides_path, :class => :rabel),link_to(@category.title, @category, :class => :rabel)], 'bigger')
      .sep10
      %h1#topic_title
        = Rabel::Base.make_mention_links(Rabel::Base.h(@guide.title)).html_safe
      %small.topic-meta
        By
        = user_profile_link(guide_user, :class => :dark)
        at
        = time_ago_in_words(@guide.created_at)
      .clearfix
    .inner
      .content.topic_content= format_topic(@guide.overview)
      - if user_signed_in?
        .pull-right
          - if current_user.bookmarked?(@guide)
            = link_to '取消收藏', current_user.bookmark_of(@guide), :method => :delete, :class => 'btn btn-xs btn-info unbookmark'
          - else
            = link_to '加入收藏', guide_bookmarks_path(@guide), :method => :post, :class => 'btn btn-xs btn-info bookmark'
      .clearfix

